<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidChatApp" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_light_green_500</item>
        <item name="background">@color/md_blue_grey_900</item>
        <item name="colorOnBackground">@color/md_red_50</item>
        <item name="colorSurface">@color/md_blue_grey_800</item>
        <item name="colorOnSurface">@color/AliceBlue</item>
        <item name="colorPrimaryVariant">@color/md_red_50</item>
        <item name="colorOnPrimary">@color/md_black_1000</item>

        <item name="colorPrimaryContainer">@color/AntiqueWhite</item>
        <item name="colorOnPrimaryContainer">@color/black</item>

        <item name="android:textColor">@color/AliceBlue</item>

        <item name="buttonTint">@color/md_blue_400</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_blue_grey_700</item>

        <item name="colorAccent">@color/md_blue_grey_700</item>

        <item name="colorSecondaryVariant">@color/md_red_50</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/background</item>
        <!-- Customize your theme here. -->

        <item name="colorTertiary">@color/material_dynamic_tertiary40</item>
<!--        <item name="android:windowFullscreen">true</item>-->
    </style>

    <style name="CustomCardViewStyle" parent="">
        <item name="cardBackgroundColor">@color/black</item>
    </style>

    <style name="senderMessageBubbleColor" parent="">
        <item name="cardBackgroundColor">@color/md_grey_900</item>
    </style>

    <style name="receiverMessageBubbleColor" parent="">
        <item name="cardBackgroundColor">@color/md_grey_800</item>
    </style>
</resources>